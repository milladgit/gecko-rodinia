C_C = pgc++
#OMP_LIB = -lgomp
ACC_FLAG = -w -mp -acc -ta=tesla -Minfo=accel  -std=c++11 -Mcuda

ACC_FLAG += -I$(GECKO_HOME)/ -L$(GECKO_HOME)/lib
CC_LIB = -lgecko


# ========================================================================================================================================================================================================200
#	EXECUTABLES (LINK OBJECTS TOGETHER INTO BINARY)
# ========================================================================================================================================================================================================200

b+tree.out:	./main.o \
		./kernel/kernel_cpu.o \
		./kernel/kernel_cpu_2.o \
		./util/timer/timer.o \
		./util/num/num.o
	$(C_C)	$(ACC_FLAG) \
			./main.o \
			./kernel/kernel_cpu.o \
			./kernel/kernel_cpu_2.o \
			./util/timer/timer.o \
			./util/num/num.o \
			-lm \
			-o b+tree.out $(CC_LIB)
# ========================================================================================================================================================================================================200
#	OBJECTS (COMPILE SOURCE FILES INTO OBJECTS)
# ========================================================================================================================================================================================================200

# ======================================================================================================================================================150
#	MAIN FUNCTION
# ======================================================================================================================================================150

main.o:	./common.h \
		./main.h \
		./main.c
	$(C_C)	$(ACC_FLAG) \
			./main.c \
			-c \
			-o ./main.o \
			-O3 \
			$(CC_LIB)

# ======================================================================================================================================================150
#	KERNELS
# ======================================================================================================================================================150

./kernel/kernel_cpu.o:	./common.h \
						./kernel/kernel_cpu.h \
						./kernel/kernel_cpu.c
	$(C_C)	$(ACC_FLAG) \
			./kernel/kernel_cpu.c \
			-c \
			-o ./kernel/kernel_cpu.o \
			-O3 \
			$(CC_LIB)

./kernel/kernel_cpu_2.o:./common.h \
						./kernel/kernel_cpu_2.h \
						./kernel/kernel_cpu_2.c
	$(C_C)	$(ACC_FLAG) \
			./kernel/kernel_cpu_2.c \
			-c \
			-o ./kernel/kernel_cpu_2.o \
			-O3 \
			$(CC_LIB)

# ======================================================================================================================================================150
#	UTILITIES
# ======================================================================================================================================================150

./util/timer/timer.o:	./common.h \
						./util/timer/timer.h \
						./util/timer/timer.c
	$(C_C)	$(ACC_FLAG) \
			./util/timer/timer.c \
			-c \
			-o ./util/timer/timer.o \
			-O3 \
			$(CC_LIB)

./util/num/num.o:	./common.h \
					./util/num/num.h \
					./util/num/num.c
	$(C_C)	$(ACC_FLAG) \
			./util/num/num.c \
			-c \
			-o ./util/num/num.o \
			-O3 \
			$(CC_LIB)

# ======================================================================================================================================================150
#	END
# ======================================================================================================================================================150

# ========================================================================================================================================================================================================200
#	DELETE
# ========================================================================================================================================================================================================200

clean:
	rm -rf	*.o *.out \
			./kernel/*.o \
			./util/timer/*.o \
			./util/num/*.o \
			output.txt

# ========================================================================================================================================================================================================200
#	END
# ========================================================================================================================================================================================================200
